@model List<About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımda Bilgileri</h1>

<table class="table table-bordered" >
    <tr>
        <th>#</th>
        <th>Açıklama</th>
        <th>Alan</th>
        <th>Mail Adresi</th>
        <th>Telefon Numarası</th>
        <th>Şehir</th>
        <th>Alt Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.Description</td>
            <td>@item.JobTitle</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.City</td>
            <td>@item.SubDescription</td>
            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/About/AddAbout/" class="btn btn-outline-info">Yeni Hakkımda Bilgisi Ekle</a>