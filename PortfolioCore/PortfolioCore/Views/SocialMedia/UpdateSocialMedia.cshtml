@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Sosyal Medya Bağlantısı Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" class="form-control" asp-for="SocialMediaID"/>
    <label>Sosyal Medya Adı</label>
    <input type="text" asp-for="Name" class="form-control">
    <br />
    <label>İkonu</label>
    <input type="text" asp-for="Icon" class="form-control">
    <br />
    <label>Bağlantı Adresi</label>
    <input type="text" asp-for="Url" class="form-control">
    <br />
    <button class="btn btn-outline-success">Sosyal Medya Bağlantısını Güncelle</button>
</form>