@model List<Education>
@{
    ViewData["Title"] = "EducationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Eğitim Bilgileri</h1>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kurum İsmi</th>
        <th>Bölüm</th>
        <th>Tarih</th>
        <th>Eğitim Durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model){
        <tr>
            <td>@item.EducationId</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.DateInfo</td>
            <td>@item.Description</td>
            <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Education/AddEducation/" class="btn btn-outline-info">Yeni Eğitim Bilgisi Ekle</a>