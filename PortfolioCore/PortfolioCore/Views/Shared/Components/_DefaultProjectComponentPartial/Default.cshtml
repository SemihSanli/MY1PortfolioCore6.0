@model List<Portfolio>
<div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
    @foreach(var item in Model){
    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@item.CategoryID">
        
        <img src="@item.PortfolioImageURL" class="img-fluid" alt="">
        <div class="portfolio-info">
            <h4>@item.PortfolioTitle</h4>
            <p>@item.PortfolioDescription</p>
            <a href="@item.PortfolioImageURL" title="App 1" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
            <a href="@item.URL" title="GitHub Link'i" class="details-link"><i class="bi bi-link-45deg"></i></a>
        </div>
        
    </div><!-- End Portfolio Item -->
    }
</div><!-- End Portfolio Container -->
    